{
  "name": "prototype-nestjs",
  "version": "1.0.0",
  "description": "REST API prototype built with Nestjs framework",
  "author": "Fondative",
  "scripts": {
    "build": "tsc",
    "nest": "nest generate service websocket",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node -r ./tsconfig-dist dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "ts-node": "ts-node -r tsconfig-paths/register",
    "migration:generate": "npm run ts-node -- node_modules/.bin/typeorm migration:generate -n",
    "migration:create": "npm run ts-node -- node_modules/.bin/typeorm migration:create -n",
    "migration:migrate": "npm run ts-node -- node_modules/.bin/typeorm migration:run",
    "schema:drop": "npm run ts-node -- node_modules/.bin/typeorm schema:drop",
    "schema:sync": "npm run ts-node -- node_modules/.bin/typeorm schema:sync",
    "prefixtures:load": "npm run schema:drop && npm run migration:migrate",
    "fixtures:load": "npm run ts-node -- src/fixtures/run.ts"
  },
  "dependencies": {
    "@nestjs/common": "^5.4.0",
    "@nestjs/core": "^5.4.0",
    "@nestjs/jwt": "^0.2.0",
    "@nestjs/passport": "^5.1.0",
    "@nestjs/platform-express": "^7.4.4",
    "@nestjs/platform-socket.io": "^7.4.4",
    "@nestjs/swagger": "^2.5.1",
    "@nestjs/typeorm": "^5.2.2",
    "@nestjs/websockets": "^7.4.4",
    "@types/socket.io-client": "^1.4.34",
    "aws-sdk": "^2.352.0",
    "bcrypt-nodejs": "^0.0.3",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "joi": "^17.8.4",
    "jsonwebtoken": "^8.3.0",
    "multer-s3": "^2.9.0",
    "mysql": "^2.16.0",
    "nodemailer": "^4.6.8",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "path": "^0.12.7",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.2",
    "rxjs": "^6.2.2",
    "socket.io-client": "^2.3.1",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "0.2.8",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.1.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "@types/socket.io": "^2.1.11",
    "@types/supertest": "^2.0.5",
    "faker": "^4.1.0",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0",
    "typeorm-fixtures": "^0.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
